NAME = philo_bonus

SRC_DIR = src/
OBJ_DIR = .objs

SRCS_FILES = philo_bonus.c utils.c check_args.c init.c  logs.c  threading.c routine.c moves.c
#init.c check_args.c logs.c utils.c threading.c routine.c moves.c

SRCS = $(addprefix $(SRC_DIR), $(SRCS_FILES))
OBJS = $(SRCS:.c=.o)

CC = gcc
CFLAGS = -Wall -Werror -Wextra -g -fsanitize=address
LFLAGS = -pthread
RM = rm -rf


all: $(NAME)
#@echo "BOOM ðŸ’¥ðŸ’¥ðŸ’¥ðŸ’¥ðŸ’¥ $(NAME) Compiled! ðŸ’¯ $(DEFAULT)"

$(NAME): $(OBJS)
		@$(CC) $(OBJS) $(CFLAGS) $(LFLAGS) -o $(NAME)
#@echo "$(GREEN)$(NAME) created!$(DEFAULT)"

clean:
		@$(RM) $(OBJS)
		@echo "$(YELLOW)Object files deleted!$(DEFAULT)ðŸ’¯"

fclean: clean
		@$(RM) $(NAME)

re: fclean all

.PONY: all clean fclean re

git:
	@git add .
	@git commit -m "$(message)"
	@git push
	@echo "\n$(GREEN)$(message) Committed!$(DEFAULT)ðŸ’¯"

#COLORS
RED = \033[1;31m
GREEN = \033[1;32m
YELLOW = \033[1;33m
message = "Commit Message By Default On $(shell date "+%d %B %T")"
